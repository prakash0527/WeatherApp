<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/textViewLocationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Location"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="time"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewLocationName" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="status"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewDateTime" />

    <TextView
        android:id="@+id/textViewTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="37°C"
        android:textAlignment="center"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewStatus" />

    <TextView
        android:id="@+id/textViewMinTem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="mini temp 37°C"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintEnd_toStartOf="@id/textViewMixTemp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTemp" />

    <TextView
        android:id="@+id/textViewMixTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="max temp 40°C"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewMinTem"
        app:layout_constraintTop_toBottomOf="@id/textViewTemp" />

    <TextView
        android:id="@+id/textViewSunRise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sunrise"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewMinTem" />

    <TextView
        android:id="@+id/textViewSunSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="sunset"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSunRise" />

    <TextView
        android:id="@+id/textViewPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="pressure"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSunSet" />

    <TextView
        android:id="@+id/textViewHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="humidity"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewPressure" />
    <TextView
        android:id="@+id/textViewWindSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="WindSpeed"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewHumidity" />







</androidx.constraintlayout.widget.ConstraintLayout>